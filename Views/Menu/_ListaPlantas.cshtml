@model IEnumerable<BetaClientesVM.Menu.MPlantaVM>

<table class="table datatable-basic small coloresTablas" width="100%" id="miTabla">
    <thead>
        <tr>
            <th>Planta</th>
            <th>Descripción</th>
            <th>Contacto</th>
            <th class="text-center">Estatus</th>
            <th class="text-center" id="idAcciones">Acciones</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            foreach (var row in Model)
            {

                <tr>
                    <td>@Html.DisplayFor(modelItem => row.Plan_Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => row.Plan_Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => row.Contacto)</td>
                    <td class="text-center">
                        @if (row.Plan_Activo)
                        {
                            <span class="badge badge-flat border-success text-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge badge-flat border-danger text-danger">Inactivo</span>
                        }
                    </td>
                    <td class="text-center" id="idButton">
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-yellow rounded-pill text-white mr-1" onclick="EditarPlanta('@Json.Encode(row)', '32')" title="Editar">
                                <i class="fa fa-edit fa-1x"></i>
                            </button>
                        </div>

                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-danger rounded-pill text-white ml-1" onclick="MensajeEliminacion('@Json.Encode(row)')" title="Eliminar">
                                <i class="fas fa-trash fa-1x"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
