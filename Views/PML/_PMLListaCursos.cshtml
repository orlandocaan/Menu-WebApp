@model IEnumerable<BetaClientesVM.PML.PMLCursosVM>


<table class="table datatable-basic small coloresTablas" width="100%">
    <thead>
        <tr>
         
            <th>Nombre</th>
            <th>Objetivos</th>
            <th>Área</th>

            <th>Equipo</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            foreach (var row in Model)
            {

                <tr>
                 
                    <td>@Html.DisplayFor(modelItem => row.Cur_Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => row.Cur_Objetivos)</td>
                    <td>@Html.DisplayFor(modelItem => row.Cur_AreaNombre)</td>
                    <td>@Html.DisplayFor(modelItem => row.Cur_EquipoNombre)</td>

                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-yellow rounded-pill text-white mr-1" onclick="DatosModalCursos('@Json.Encode(row)', '3')" title="Editar">
                                <i class="fa fa-edit fa-1x"></i>
                            </button>
                            <button class="btn btn-sm btn-danger rounded-pill text-white ml-1" onclick="MensajeEliminacion('@Json.Encode(row)')" title="Eliminar">
                                <i class="fas fa-trash fa-1x"></i>
                            </button>

                        </div>
                    </td>
                </tr>

            }
        }

    </tbody>
</table>
<script>
    $(".btn-yellow").on("click", function () {
        // Desactivar los botones de búsqueda
        $("#btnBuscarArea").prop("disabled", true);
        $("#btnBuscarEquipos").prop("disabled", true);
    });

    


    </script>


